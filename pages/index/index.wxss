.main-wrap {
    width: 100%;
    padding-bottom: 40rpx;
    position: relative;
    background-color: #fefefe;
}

/*
    title
*/

.main-title {
    width: 100%;
    height: 300rpx;
    box-sizing: border-box;
    padding: 50rpx 60rpx;
    background-color: #2a8cff;
}

.main-title image {
    width: 160rpx;
    height: 160rpx;
    float: left;
    margin-right: 30rpx;
}

.main-title p {
    font-size: 38rpx;
    line-height: 38rpx;
    color: #fff;
}

.main-title text {
    width: 580rpx;
    margin-top: 20rpx;
    display: block;
    font-size: 30rpx;
    line-height: 50rpx;
    color: #aad1ff;
}

/*
    buttons group
*/

.main-groups {
    width: 710rpx;
    height: 427rpx;
    border: 1rpx solid #e8e8e8;
    position: absolute;
    top: 270rpx;
    left: 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
    box-sizing: border-box;
    padding: 30rpx 25rpx;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1);
}

.main-groups-important {
    width: 320rpx;
    height: 180rpx;
    float: left;
    position: relative;
    padding: 0;
    padding-top: 10rpx;
    text-align: left;
    font-size: 0;
    line-height: normal;
}

.main-groups-important .bg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.main-groups-important-content {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
    box-sizing: border-box;
    padding: 50rpx 20rpx;
    color: #0f80e8;
}

.main-groups-important-content image {
    width: 80rpx;
    height: 80rpx;
    float: left;
    margin-right: 20rpx;
}

.main-groups-important-content p {
    font-size: 36rpx;
}

.main-groups-important-content text {
    display: block;
    font-size: 22rpx;
    margin-top: 10rpx;
}

.main-groups-btns {
    width: 100%;
    margin-top: 50rpx;
}

.main-groups-btn {
    width: 25%;
    height: 130rpx;
    display: inline-block;
    text-align: center;
    position: relative;
}

.main-groups-btn image {
    width: 76rpx;
    height: 76rpx;
}

.main-groups-btn text {
    display: block;
    font-size: 26rpx;
}

/*
    doctor recommend
*/

.main-recommend {
    width: 100%;
    height: 80rpx;
    margin-top: 400rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
}

.main-recommend image {
    width: 137rpx;
    height: 32rpx;
    margin-top: 35rpx;
    padding-left: 5rpx;
}

.main-recommend-more {
    float: right;
    font-size: 26rpx;
    line-height: 100rpx;
    color: #0f80e8;
}

.main-recommend-more image {
    width: 16rpx;
    margin-top: 37rpx;
    margin-left: 10rpx;
    float: right;
    height: 28rpx;
}

.main-recommend-block {
    width: 710rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    min-height: 370rpx;
    border: 1rpx solid #e8e8e8;
    background-color: #fff;
    border-radius: 10rpx;
    box-sizing: border-box;
    box-shadow: 0 0 10rpx rgba(0,0,0,.1);
    padding: 30rpx 20rpx;
}

.main-recommend-block-noMargin {
    margin-top: 0;
}

.main-recommend-block .head {
    width: 110rpx;
    height: 110rpx;
    border: 1rpx solid #e8e8e8;
    border-radius: 50%;
    float: left;
    position: relative;
    margin-right: 15rpx;
}

.main-recommend-block .head image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.main-recommend-block .head .tip {
    width: 110rpx;
    height: 32rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    border-radius: 0;
}

.main-recommend-block .doctor-name {
    font-size: 32rpx;
    color: #333;
}

.main-recommend-block .doctor-position {
    font-size: 26rpx;
    color: #fff;
    background-color: #ff725b;
    border-radius: 5rpx;
    padding: 3rpx 8rpx;
    display: inline-block;
    margin-left: 10rpx;
}

.main-recommend-block .gotoconsult {
    width: 170rpx;
    height: 80rpx;
    float: right;
}

.main-recommend-block .gotoconsult .content {
    float: right;
    width: 135rpx;
    height: 50rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
    border: 1rpx solid #0f80e8;
    text-align: center;
    line-height: 50rpx;
    color: #0f80e8;
}

.main-recommend-block .office {
    font-size: 28rpx;
    color: #666;
    margin-top: 25rpx;
    line-height: 28rpx;
}

.main-recommend-block .hospital {
    font-size: 28rpx;
    color: #666;
    margin-top: 25rpx;
    margin-left: 125rpx;
    line-height: 28rpx;
}

.main-recommend-block .cando {
    width: 100%;
    margin-top: 30rpx;
    overflow: hidden;
}

.main-recommend-block .cando image {
    width: 80rpx;
    height: 37rpx;
    float: left;
    margin-left: 17rpx;
}

.main-recommend-block .cando p {
    width: 545rpx;
    display: block;
    margin-left: 125rpx;
    font-size: 28rpx;
    line-height: 35rpx;
    color: #999;
}

.main-recommend-block .server {
    width: 100%;
    margin-top: 30rpx;
}

.main-recommend-block .server .serverImg {
    width: 80rpx;
    height: 37rpx;
    float: left;
    margin-right: 30rpx;
    margin-left: 17rpx;
}

.main-recommend-block .server .block {
    width: 55rpx;
    height: 55rpx;
    margin-right: 25rpx;
}

/*
    utils
*/

.clearBoth {
    clear: both;
}

form {
    border: none;
}

button {
    background-color: #fff;
    line-height: normal;
    overflow: auto;
}

.btn-hover {
    background-color: #f5f5f5;
}

button::after{
    border: none;
}