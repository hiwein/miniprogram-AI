/* pages/authorize/authorize.wxss */
Page {
    width: 100%;
    height: 100%;
}

.wrap {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding-top: 100rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.wrap .logo {
    width: 140rpx;
    height: 140rpx;
    display: block;
    margin: 0 auto;
}

.wrap .companyName {
    font-size: 40rpx;
    color: #000;
    font-weight: bolder;
    text-align: center;
    line-height: 40rpx;
    margin-top: 40rpx;
}

.wrap .line {
    width: 690rpx;
    height: 0;
    margin: 0 auto;
    margin-top: 60rpx;
    border-top: 1rpx solid #e8e8e8;
}

.wrap .boldText {
    margin-top: 60rpx;
    font-size: 34rpx;
    line-height: 34rpx;
    font-weight: bold;
    text-align: center;
    color: #000;
}

.wrap .getUserInfo {
    width: 100%;
}

.wrap .btn-wrap {
    width: 100%;
    margin-top: 50rpx;
    height: 150rpx;
    position: relative;
}

.wrap .getUserInfo text  {
    width: 470rpx;
    display: block;
    margin: 0 auto;
    text-align: center;
    font-size: 32rpx;
    line-height: 66rpx;
    color: #666666;
}

.wrap .getUserPhone {
    position: absolute;
    top: 0;
    left: 100%;
    background-color: #fff;
}

.wrap button {
    width: 600rpx;
    height: 100rpx;
    border-radius: 10rpx;
    margin-top: 53rpx;
    line-height: 100rpx;
    color: #fff;
    background-color: #1cbb1a;
}